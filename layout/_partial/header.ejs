
<head>
  <meta charset="utf-8">
  <%
  var title = page.title;

  if (is_archive()){
    title = '归档';

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = '分类: ' + page.category;
  } else if (is_tag()){
    title = '标签: ' + page.tag;
  }
  %>
  
  <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <% if (page.tags && page.tags.length) { %>
    <meta name="keywords" content="<% page.tags.forEach(function(tag) { %><%= tag.name %>,<% }); %>" />
  <% } else { %>
    <meta name="keywords" content="<%= theme.keywords %>" />
  <% } %>

  <%- open_graph() %>

  <% if (theme.rss){ %>
    <link rel="alternate" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml">
  <% } %>

  <% if (theme.favicon){ %>
    <link rel="icon" href="<%- theme.favicon %>">
  <% } %>

  <% if (theme.personal_style){ %>
    <%- css(theme.personal_style) %>
  <% } %>

  <%- css(['/css/base.css', '/icon/iconfont.css' ,'/css/github-markdown.css']) %>

  <%- js(['/js/util.js', '/js/valine.min.js']) %>
  
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js" async></script>
  <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js" async></script>
  <script src="//cdn1.lncld.net/static/js/3.0.4/av-min.js" async></script>

</head>